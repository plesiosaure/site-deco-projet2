extends layout2

block content
	h1 Nouvel article
	form(method="POST" enctype="multipart/form-data")
		.form-group
			label(for='title') Titre de l'article
			input#title.form-control(type='text', placeholder='Appartement 50 m2' name='title')
		.form-group
			label(for='text') Texte de l'article
			textarea#text.form-control(placeholder='Description' name='text')
		.form-group
			label(for="images") Ajouter une ou plusieurs images
			input#images(type="file" name="article_sourceName" multiple)

		button.btn.btn-primary(type='submit') Enregistrer

